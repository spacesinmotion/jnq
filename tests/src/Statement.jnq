
use State from State
use Type
use Expression

type StatementType enum {
  ExpressionS,
  Return,
  Break,
  Continue,
  Case,
  Default,
  Scope,
  If,
  For,
  While,
  DoWhile,
  Switch,
}

type StatementSelect union {
  declare *DeclarationStatement
  express *ExpressionStatement 
  ret *ReturnStatement
  brk *BreakStatement
  cont *ContinueStatement
  caseS *CaseStatement 
  defaultS *DefaultStatement
  scope *ScopeStatement
  ifS *IfStatement 
  forS *ForStatement 
  whileS *WhileStatement
  doWhileS *DoWhileStatement
  switchS *SwitchStatement
}

type Statement struct {
  select StatementSelect
  _type StatementType 
  location State
  next *Statement
}

type DeclarationStatement struct {
  e *Expression.Expression
  v *Type.Variable 
}

type ExpressionStatement struct {
  e *Expression.Expression
}

type ReturnStatement struct {
  e *Expression.Expression
}

type BreakStatement struct {
}

type ContinueStatement struct {
}

type CaseStatement struct {
  caseE *Expression.Expression
  body *Statement
}

type DefaultStatement struct {
  body *Statement
}

type ScopeStatement struct {
  body *Statement
}

type IfStatement struct {
  condition *Expression.Expression
  ifbody *Statement
  elsebody *Statement
}

type ForStatement struct {
  init *Expression.Expression
  condition *Expression.Expression 
  incr *Expression.Expression
  body *Statement
}

type WhileStatement struct {
  condition *Expression.Expression 
  body *Statement
}

type DoWhileStatement struct {
  body *Statement
  condition *Expression.Expression 
}

type SwitchStatement struct {
  body *Statement
  condition *Expression.Expression 
}
