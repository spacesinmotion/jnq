

fn dummy() *int {
  return null as *int
}

fn none_dummy() *char {
  return "some static text"
}

fn main() int {
  printf("conditionsls\n")

  a := 3
  b := 42

  if (a == 2)
    b = 42

  ASSERT(b == 42)

  if (b == 42) {
    b /= 2
  }
  ASSERT(b == 21)

  if (b == 42)
    b *= b
  else
    b = b * 3

  b = 21
  if (b == 42) {
    b *= b
  } else if (b != 6) {
    b = b * 3
  } else {
    b = b * 3
  }

  ASSERT(b == 21 * 3)

  if (x := dummy())
    ASSERT(false)
  else
    ASSERT(x == null)

  if (x := none_dummy())
    ASSERT(x != null)
  else
    ASSERT(false)

  printf(" ...ok\n")
  return 0
}