
fn a() int {
  return 42
}

fn add(x int, y int) int {
  return x + y
}

fn add_2(x int, y double) double {
  return x as double + y
}

fn main() int {
  printf("functions\n")

  ASSERT(42 == a())
  ASSERT(3 == add(1, 2))
  ASSERT(44 == add(a(), 2))
  ASSERT(47 == add(5, a()))

  ASSERT(a() + 4 == 46)
  ASSERT(4 + a() == 46)
  ASSERT(2 * a() + 4 == 88)
  ASSERT(4 + a() * 2 == 88)

  ASSERT(32.1 == add_2(28, 4.1))
  ASSERT(46.32 == add_2(a(), 4.32))

  printf(" ...ok\n")
  return 0
}