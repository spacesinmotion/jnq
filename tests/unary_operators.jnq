

fn pointer() {
  printf(" .pointer\n")

  a := 5
  ap := &a
  ASSERT(*ap == a)
  ASSERT(ap == &a)

  b := *ap
  ASSERT(b == a)
}

fn booleans() {
  printf(" .booleans\n")

  t := true
  ASSERT(t)
  f := false
  ASSERT(!f)
}

fn pointer_cast_to_bool() {
  printf(" .pointer_cast_to_bool\n")

  a := 5
  ap := &a
  ASSERT(ap)
  ASSERT(ap != null)

  b := ap != null
  ASSERT(b)

  np := null as *int
  ASSERT(!np)

  ASSERT(np || ap)
}

fn main() int {
  printf("unary operators\n")
  pointer()
  booleans()
  pointer_cast_to_bool()
  printf(" ...ok\n")
  return 0
}