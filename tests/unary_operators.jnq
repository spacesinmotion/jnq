

fn pointer() {
  printf(" .pointer\n")

  a int = 5
  ap *int = &a
  ASSERT(*ap == a)
  ASSERT(ap == &a)

  b int = *ap
  ASSERT(b == a)
}

fn booleans() {
  printf(" .booleans\n")

  t bool = true
  ASSERT(t)
  f bool = false
  ASSERT(!f)
}

fn pointer_cast_to_bool() {
  printf(" .pointer_cast_to_bool\n")

  a int = 5
  ap *int = &a
  ASSERT(ap)
  ASSERT(ap != null)

  b bool = ap != null
  ASSERT(b)

  np *int = null
  ASSERT(!np)

  ASSERT(np || ap)
}

fn main() int {
  printf("unary operators\n")
  pointer()
  booleans()
  pointer_cast_to_bool()
  printf(" ...ok\n")
}