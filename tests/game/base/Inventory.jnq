  //s.img:set_texture(img)
}

fn add_to(l *Item, c *int, n *char, img *Image, row int) *Item{
  it := find_item(l, *c, n);
  if (!it) {
    it = &l[*c]
    init_item(it, img, 0, row)
    (*c)++
  } 
  return it
}

fn add_item(inv *Inventory, item *ItemItem) *Item {
