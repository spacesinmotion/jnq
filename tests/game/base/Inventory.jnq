fn find_item(l *Item, len int, name *char) *Item {
  for (i := 0; i < len; ++i ) 
    if (strcmp(l[i].item.name, name) == 0)
      return &l[i]
  return null
}

fn init_item(it *Item, img *Image, pos int, row int) {
  it.fx = it.x = 200.0f + pos as float * 64.0f 
  it.fy = it.y = 10.0f
  it.row = row
