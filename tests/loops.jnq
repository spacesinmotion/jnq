
use printf from C.stdio

use early_out_apply from tests.bugs

use * from tests.sub.util

fn for_loops()
{
  printf(" .for loops test\n")

  a := 0
  for (i := 0; i < 4; ++i)
    a += 3

  ASSERT(a == 4 * 3)

  a = 0
  for (i := 0; i < 4; ++i) {
    a += 7
  }
  ASSERT(a == 4 * 7)
}

fn while_loops()
{
  printf(" .while loops test\n")

  a := 3;
  while (a > 0)
    --a;

  ASSERT(a == 0)

  while (a < 8) {
    ++a;
  }

  ASSERT(a == 8)
}

fn do_while_loops()
{
  printf(" .do while loops test\n")
  a := 3;
  do {
    --a;
  } while (a > 0)

  ASSERT(a == 0)

  do {
    --a
  } while (a > 0)
}

fn continue_loops() {
  printf(" .continue_loops\n")

  a := 0
  for (i := 0; i < 10; ++i) {
    if (i % 2 == 0)
      continue
    a += 3
  }

  ASSERT(a == 5 * 3)
}

fn break_loops() {
  printf(" .break_loops\n")

  a := 0
  for (i := 0; i < 10; ++i) {
    if (i > 4)
      break
    a += 3
  }

  ASSERT(a == 5 * 3)
}

fn main() int {
  print("loops")

  for_loops()
  while_loops()
  do_while_loops()
  continue_loops()
  break_loops()

  print(" ...ok\n", identity(42))
  return 0
}